.row
  .col-md-12
    %h3
      %b Páginas

.row
  .col-md-12
    = link_to 'Nova Página', new_project_page_path(@project), class: 'pull-right btn btn-warning btn-sm'
%hr/
.row
  .col-md-12
    %table.table.table-striped
      %thead
        %tr
          %th #
          %th Título
          %th Criada em
          %th Publicada?
          %th Ações
    
      %tbody
        - @pages.each_with_index do |page, index|
          %tr
            %td= index + 1
            %td= page.title
            %td= page.created_at.strftime('%d/%m/%Y')
            %td= publish_helper page.publish
            %td.col-md-2
              = link_to 'Editar', edit_project_page_path(project_id: @project, id: page)
              = link_to 'Remover', project_page_path(project_id: @project, id: page), :method => :delete, :data => { :confirm => t(:confirm_destroy) }
    