.row
  .col-md-12
    %h3
      %b Participações

.row
  .col-md-12
    = link_to 'Nova Participação', new_project_project_participation_path(@project), class: 'pull-right btn btn-warning btn-sm'
%hr/
.row
  .col-md-12
    %table.table.table-striped
      %thead
        %tr
          %th #
          %th Título
          %th Início
          %th Fim
          %th Inscrição
          %th Publicado?
          %th Code
          %th Ações
    
      %tbody
        - @project_participations.each_with_index do |project_participation, index|
          %tr
            %td= index + 1
            %td= project_participation.title
            %td= project_participation.start.strftime('%d/%m/%Y')
            %td= project_participation.end.strftime('%d/%m/%Y')
            %td= project_participation.project_subscribe.title if project_participation.project_subscribe.present?
            %td= publish_helper project_participation.publish
            %td= project_participation.form_code
            %td.col-md-2
              = link_to 'Editar', edit_project_project_participation_path(project_id: @project, id: project_participation)
              = link_to 'Remover', project_project_participation_path(project_id: @project, id: project_participation), :method => :delete, :data => { :confirm => t(:confirm_destroy) }
        
