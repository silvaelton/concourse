.row
  .col-md-12
    %h3
      %b Consultas

%hr/
.row
  .col-md-12
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th #
          %th Título
          %th Conteúdo
          %th Criado em
          %th Status
          %th Ações
      %tbody
        - @consults.each_with_index do |consult, index|
          %tr
            %td= index + 1
            %td= consult.title
            %td= consult.content
            %td= consult.created_at.strftime('%d/%m/%Y')
            %td= (consult.status) ? "lido" : "não lido"
            %td.col-md-2
              = link_to 'Marcar como lido', project_consult_path(project_id: @project, id: consult), :method => :delete, :data => { :confirm => t(:confirm_destroy) }
    
  